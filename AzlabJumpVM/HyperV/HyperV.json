{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "computerName": {
            "type": "string",
            "metadata": {
                "description": "Computer Name"
            }
        },       
        "HyperVNATIP": {
            "type": "string",
            "metadata": {
                "description": "HyperV NAT IP"
            }
        },                             
        "HyperVSubnetPrefix": {
            "type": "string",
            "metadata": {
                "description": "HyperV VNet Prefix"
            }
        },
        "TimeZone": {
            "type": "string",      
            "metadata": {
                "description": "Time Zone"
            }
        },                                              
        "location": {
            "type": "string",
          "metadata": {
            "description": "Region of Resources"
          }
        },
        "_artifactsLocation": {
            "type": "string",
            "metadata": {
                "description": "The location of resources, such as templates and DSC modules, that the template depends on"
            }
        },
        "_artifactsLocationSasToken": {
            "type": "securestring",
            "metadata": {
                "description": "Auto-generated token to access _artifactsLocation"
            }
        }                
    },
    "variables": {
        "ModulesURL": "[uri(parameters('_artifactsLocation'), concat('FastCar_HyperV/DSC/HyperV.zip', parameters('_artifactsLocationSasToken')))]",
        "ConfigurationFunction": "HyperV.ps1\\HyperV"
    },
    "resources": [
        {
            "name": "[concat(parameters('computerName'),'/Microsoft.Powershell.DSC')]",
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "apiVersion": "2019-03-01",
            "location": "[parameters('location')]",
            "properties": {
                "publisher": "Microsoft.Powershell",
                "type": "DSC",
                "typeHandlerVersion": "2.19",
                "autoUpgradeMinorVersion": true,
                "settings": {
                    "ModulesUrl": "[variables('modulesUrl')]",
                    "ConfigurationFunction": "[variables('configurationFunction')]",
                        "Properties": {
                            "HyperVNATIP": "[parameters('HyperVNATIP')]",
                            "HyperVSubnetPrefix": "[parameters('HyperVSubnetPrefix')]",
                            "TimeZone": "[parameters('TimeZone')]"                            
                        }
                }
            }
        }
    ]
}
