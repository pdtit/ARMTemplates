{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "vmstorageType": {
      "type": "string",
      "defaultValue": "Premium_LRS",
      "allowedValues": [
        "Standard_LRS",
        "Standard_GRS",
        "Standard_RAGRS",
        "Premium_LRS"
      ]
    }
    "SQLVMName": {
      "type": "string",
      "minLength": 1
    },
    "SQLVMAdminUserName": {
        "type": "string",
      "minLength": 1,
      "defaultValue": "labadmin",
      "metadata": {
        "description": "Username for the Virtual Machine."
      }
    },
    "SQLVMAdminPassword": {
      "type": "securestring",
      "defaultValue": "P@55w.rdP@55w.rd",
      "metadata": {
        "description": "Password for the Virtual Machine."
      }
    }
    },
    "SQLVMSKU": {
   "type": "string",
   "defaultValue": "Web",
   "allowedValues": [
      "Web",
      "Standard"
    ]
    }
  },


  "variables": {
    "AzTrainingVNetPrefix": "10.0.0.0/16",
    "AzTrainingVNetSubnet1Name": "FrontendNetwork",
    "AzTrainingVNetSubnet1Prefix": "10.0.0.0/24",
    "AzTrainingVNetSubnet2Name": "BackendNetwork",
    "AzTrainingVNetSubnet2Prefix": "10.0.1.0/24",
    "vmstorageName": "[concat('vmstorage', uniqueString(resourceGroup().id))]",
    "SQLPublicIPName": "[concat('sqlvmpip', uniqueString(resourceGroup().id))]",
    "SQLVMImagePublisher": "MicrosoftSQLServer",
    "SQLVMImageOffer": "sql2022-ws2022",
    "SQLVMOSDiskName": "SQLVMOSDisk",
    "SQLVMVmSize": "Standard_DS4_v2",
    "SQLVMVnetID": "[resourceId('Microsoft.Network/virtualNetworks', 'AzTrainingVNet')]",
    "SQLVMSubnetRef": "[concat(variables('SQLVMVnetID'), '/subnets/', variables('AzTrainingVNetSubnet2Name'))]",
    "SQLVMStorageAccountContainerName": "vhds",
    "SQLVMNicName": "[concat(parameters('SQLVMName'), 'NetworkInterface')]",
    "SQLDISK1": "[concat('http://',variables('vmstorageName'),'.blob.core.windows.net/','vhds','/','dataDisk1.vhd')]",
    "SQLDISK2": "[concat('http://',variables('vmstorageName'),'.blob.core.windows.net/','vhds','/','dataDisk2.vhd')]",
    "SQLDSCArchiveFolder": "DSC",
    "SQLDSCArchiveFileName": "SQLDSC.zip",
    "Customize-WinVMScriptFolder": "CustomScripts",
    "Customize-WinVMScriptFileName": ",configure-winlabvm-tableau_w_sql.ps1"
    
  },
  "resources": [
    {
      "name": "AzTrainingVNet",
      "type": "Microsoft.Network/virtualNetworks",
      "location": "[resourceGroup().location]",
      "apiVersion": "2016-03-30",
      "dependsOn": [ ],
      "tags": {
        "displayName": "AzTrainingVNet"
      },
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "[variables('AzTrainingVNetPrefix')]"
          ]
        },
        "subnets": [
          {
            "name": "[variables('AzTrainingVNetSubnet1Name')]",
            "properties": {
              "addressPrefix": "[variables('AzTrainingVNetSubnet1Prefix')]"
            }
          },
          {
            "name": "[variables('AzTrainingVNetSubnet2Name')]",
            "properties": {
              "addressPrefix": "[variables('AzTrainingVNetSubnet2Prefix')]"
            }
          }
        ]
      }
    },
    {
      "name": "[variables('vmstorageName')]",
      "type": "Microsoft.Storage/storageAccounts",
      "location": "[resourceGroup().location]",
      "apiVersion": "2016-01-01",
      "sku": {
        "name": "[parameters('vmstorageType')]"
      },
      "dependsOn": [ ],
      "tags": {
        "displayName": "vmstorage"
      },
      "kind": "Storage"
    },
    {
      "name": "[variables('SQLVMNicName')]",
      "type": "Microsoft.Network/networkInterfaces",
      "location": "[resourceGroup().location]",
      "apiVersion": "2016-03-30",
      "dependsOn": [
        "[resourceId('Microsoft.Network/virtualNetworks', 'AzTrainingVNet')]",
        "[resourceId('Microsoft.Network/publicIPAddresses', variables('SQLPublicIPName'))]"
      ],
      "tags": {
        "displayName": "SQLVMNic"
      },
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[variables('SQLVMSubnetRef')]"
              },
              "publicIPAddress": {
                "id": "[resourceId('Microsoft.Network/publicIPAddresses', variables('SQLPublicIPName'))]"
              }
            }
          }
        ]
      }
    },
    {
      "name": "[variables('SQLPublicIPName')]",
      "type": "Microsoft.Network/publicIPAddresses",
      "location": "[resourceGroup().location]",
      "apiVersion": "2016-03-30",
      "dependsOn": [ ],
      "tags": {
        "displayName": "SQLVMPublicIP"
      },
      "properties": {
        "publicIPAllocationMethod": "Dynamic",
        "dnsSettings": {
          "domainNameLabel": "[parameters('SQLPublicIPDnsName')]"
        }
      }
    },
    {
      "name": "[parameters('SQLVMName')]",
      "type": "Microsoft.Compute/virtualMachines",
      "location": "[resourceGroup().location]",
      "apiVersion": "2015-06-15",
      "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts', variables('vmstorageName'))]",
        "[resourceId('Microsoft.Network/networkInterfaces', variables('SQLVMNicName'))]"
      ],
      "tags": {
        "displayName": "SQLVM"
      },
      "properties": {
        "hardwareProfile": {
          "vmSize": "[variables('SQLVMVmSize')]"
        },
        "osProfile": {
          "computerName": "[parameters('SQLVMName')]",
          "adminUsername": "[parameters('SQLVMAdminUsername')]",
          "adminPassword": "[parameters('SQLVMAdminPassword')]"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "[variables('SQLVMImagePublisher')]",
            "offer": "[variables('SQLVMImageOffer')]",
            "sku": "[parameters('SQLVMSKU')]",
            "version": "16.0.1000.6"
          },
          "osDisk": {
            "name": "SQLVMOSDisk",
            "vhd": {
              "uri": "[concat(reference(resourceId('Microsoft.Storage/storageAccounts', variables('vmstorageName')), '2016-01-01').primaryEndpoints.blob, variables('SQLVMStorageAccountContainerName'), '/', variables('SQLVMOSDiskName'), '.vhd')]"
            },
            "caching": "ReadWrite",
            "createOption": "FromImage"
          },
          "dataDisks": [
            {
              "name": "datadisk1",
              "diskSizeGB": "1023",
              "lun": 0,
              "vhd": { "uri": "[variables('SQLDISK1')]" },
              "createOption": "Empty"
            },
            {
              "name": "datadisk2",
              "diskSizeGB": "1023",
              "lun": 1,
              "vhd": { "uri": "[variables('SQLDISK2')]" },
              "createOption": "Empty"
            }
          ]

        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('SQLVMNicName'))]"
            }
          ]
        }
      },
      "resources": [
        
        {
          "name": "Microsoft.Powershell.DSC",
          "type": "extensions",
          "location": "[resourceGroup().location]",
          "apiVersion": "2016-03-30",
          "dependsOn": [
            "[resourceId('Microsoft.Compute/virtualMachines', parameters('SQLVMName'))]"
          ],
          "tags": {
            "displayName": "SQLDSC"
          },
          "properties": {
            "publisher": "Microsoft.Powershell",
            "type": "DSC",
            "typeHandlerVersion": "2.9",
            "autoUpgradeMinorVersion": true,
            "settings": {
              "configuration": {
                "url": "https://raw.githubusercontent.com/pdtit/ARMTemplates/master/AzlabJumpVM/Tableau_w_SQL/DSC/sqlvm.ps1",
                "script": "sqlvm.ps1",
                "function": "Main"
              },
              "configurationArguments": {
                "nodeName": "[parameters('SQLVMName')]"
              }
            },
            "protectedSettings": {
              "configurationUrlSasToken": "[parameters('_artifactsLocationSasToken')]"
            }
          }
        }


      ]
    }],
  "outputs": {}
}

